---
import "../styles/global.css"
import '@fontsource-variable/montserrat';
import '@fontsource-variable/roboto';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const {
	title = "Sana tu Tiroides en 5 Pasos - Dr. Rawdy Reales | Método Médico Comprobado",
	description = "Descubre el método revolucionario del Dr. Rawdy Reales para sanar tu tiroides naturalmente. Más de 500 pacientes transformados. Sistema paso a paso basado en 15+ años de experiencia clínica. ¡Recupera tu energía y bienestar!",
	image = "./og-image.jpg",
	canonical = Astro.url.href
} = Astro.props;

const siteUrl = "https://aprendeconrawdy.com/cursotiroides/"; // Cambia por tu dominio real
const fullImageUrl = new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Meta básicos -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Título y descripción -->
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="./iconorawdy.png" />
		<link rel="apple-touch-icon" href="./iconorawdy.png" />
		
		<!-- Preload crítico -->
		<link rel="preload" href="/Portada.jpg" as="image" type="image/jpeg" />
		<link rel="preload" href="/fotodoc.jpg" as="image" type="image/jpeg" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImageUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Dr. Rawdy Reales - Especialista en Tiroides" />
		<meta property="og:locale" content="es_ES" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonical} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={fullImageUrl} />
		<meta name="twitter:creator" content="@drrawdyreales" />
		
		<!-- Keywords -->
		<meta name="keywords" content="tiroides, hipotiroidismo, Dr. Rawdy Reales, endocrinólogo, medicina funcional, tratamiento natural tiroides, TSH, T3, T4, fatiga crónica, metabolismo lento, curso tiroides, sanación natural" />
		
		<!-- Robots -->
		<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
		
		<!-- Autor -->
		<meta name="author" content="Dr. Rawdy Reales - Especialista en Medicina Interna y Endocrinología" />
		
		<!-- Tema de color para móviles -->
		<meta name="theme-color" content="#2563eb" />
		<meta name="msapplication-TileColor" content="#2563eb" />
		
		<!-- Para prevenir zoom en iOS -->
		<meta name="format-detection" content="telephone=no" />
		
