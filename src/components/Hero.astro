---
// src/components/Hero.astro
import { Image } from "astro:assets";
import FotoPortada from "../assets/Portada.jpg";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg
      class="w-full h-full"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 100 100"
    >
      <defs>
        <pattern
          id="medical-pattern"
          x="0"
          y="0"
          width="20"
          height="20"
          patternUnits="userSpaceOnUse"
        >
          <circle cx="10" cy="10" r="1" fill="currentColor"></circle>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#medical-pattern)"></rect>
    </svg>
  </div>

  <!-- Floating Medical Elements -->
  <div
    class="absolute top-20 left-10 w-24 h-24 bg-gradient-to-br from-blue-200 to-blue-300 rounded-full opacity-20 animate-float blur-sm"
  >
  </div>
  <div
    class="absolute top-40 right-20 w-32 h-32 bg-gradient-to-br from-red-200 to-red-300 rounded-full opacity-15 animate-float blur-sm"
    style="animation-delay: 2s;"
  >
  </div>
  <div
    class="absolute bottom-32 left-1/4 w-20 h-20 bg-gradient-to-br from-indigo-200 to-indigo-300 rounded-full opacity-20 animate-float blur-sm"
    style="animation-delay: 4s;"
  >
  </div>

  <div class="container mx-auto py-5 px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
      <!-- Content Side -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <!-- Main Headline -->
        <h1
          class="text-5xl lg:text-7xl xl:text-8xl font-black mb-6 leading-tight"
        >
          <span class="block text-slate-800">Sana tu</span>
          <span
            class="block bg-gradient-to-r from-red-600 via-red-500 to-pink-500 bg-clip-text text-transparent"
          >
            Tiroides
          </span>
          <span class="block text-slate-800">en 5 Pasos</span>
        </h1>

        <!-- Subheadline -->
        <div class="space-y-4 mb-8">
          <p
            class="text-xl lg:text-2xl font-semibold text-slate-700 leading-relaxed"
          >
            Reprograma tu tiroides, recupera tu vida
          </p>
          <p
            class="text-lg text-slate-600 leading-relaxed max-w-xl lg:max-w-none"
          >
            No más dudas, no más síntomas: entiende y trata tu tiroides
            <strong class="text-slate-800">diseñado por un especialista</strong>
          </p>
        </div>

        <!-- Value Props -->
        <div class="grid sm:grid-cols-3 justify-center gap-4 mb-10">
          <div
            class="bg-white/60 backdrop-blur-sm rounded-xl p-4 border border-green-100 shadow-sm"
          >
            <div class="w-8 h-8 mx-auto lg:mx-0 mb-2 text-green-600">
              <!-- Home Icon Placeholder -->
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
            </div>
            <p
              class="text-sm font-semibold text-slate-700 text-center lg:text-left"
            >
              Desde casa
            </p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href="#precios"
            class="group bg-gradient-to-r from-red-600 to-red-500 hover:from-red-700 hover:to-red-600 text-white px-8 py-4 rounded-full font-bold text-lg shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 text-center"
            
          >
            <span class="flex items-center justify-center gap-3">
              Transformar Mi Tiroides Ahora
              <svg
                class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </span>
          </a>
        </div>

        <!-- Social Proof -->
        <div
          class="flex flex-col sm:flex-row items-center gap-6 text-sm text-slate-600"
        >
          <div class="flex items-center gap-2">
            <div class="flex">
              <!-- Star ratings -->
              <svg
                class="w-5 h-5 text-yellow-400 fill-current"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <!-- Repeat for 5 stars -->
              <svg
                class="w-5 h-5 text-yellow-400 fill-current"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-5 h-5 text-yellow-400 fill-current"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-5 h-5 text-yellow-400 fill-current"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-5 h-5 text-yellow-400 fill-current"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
            </div>
            <span class="font-semibold">+500 personas transformadas</span>
          </div>

          <div class="hidden sm:block w-px h-4 bg-slate-300"></div>

          <div class="flex items-center gap-2">
            <span
              >Creado por <strong>Dr. Rawdy Reales</strong> - Endocrinólogo</span
            >
          </div>
        </div>
      </div>

      <!-- Image Side -->
      <div class="order-1 lg:order-2 relative">
        <!-- Main Course Image Container -->
        <div class="relative">
          <!-- Course Cover Image -->
          <div
            class="relative overflow-hidden rounded-2xl shadow-2xl border-4 border-white/50 backdrop-blur-sm transform hover:scale-105 transition-transform duration-500"
          >
            <Image
              src={FotoPortada}
              alt="Sana tu Tiroides - Portada del Curso"
              class="w-full h-auto object-cover"
            />
            <!-- Overlay for the actual image -->
            <div
              class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-black/20"
            >
            </div>
          </div>

          <!-- Floating Stats Cards -->
          <div
            class="absolute -top-8 -left-8 bg-white rounded-xl p-4 shadow-xl border border-blue-100 transform -rotate-6 hover:rotate-0 transition-transform duration-300"
          >
            <div class="text-center">
              <div class="text-3xl font-black text-red-600">+500</div>
              <div
                class="text-xs font-semibold text-slate-600 uppercase tracking-wide"
              >
                Casos Tratados
              </div>
            </div>
          </div>

          <div
            class="absolute -bottom-8 -right-8 bg-white rounded-xl p-4 shadow-xl border border-green-100 transform rotate-6 hover:rotate-0 transition-transform duration-300"
          >
            <div class="text-center">
              <div class="text-3xl font-black text-green-600">95%</div>
              <div
                class="text-xs font-semibold text-slate-600 uppercase tracking-wide"
              >
                Satisfacción
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="hidden md:flex absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <div
      class="w-6 h-10 border-2 border-slate-400 rounded-full flex justify-center"
    >
      <div class="w-1 h-3 bg-slate-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
</style>
