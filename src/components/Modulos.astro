---
// src/components/ModulesSection.astro
import { Image } from "astro:assets";
import Modulo1 from "../assets/1hori.jpg"
import Modulo2 from "../assets/2hori.jpg"
import Modulo3 from "../assets/3hori.jpg"
import Modulo4 from "../assets/4hori.jpg"
import Modulo5 from "../assets/5hori.jpg"
import Modulo6 from "../assets/6hori.jpg"
import Modulo7 from "../assets/7hori.jpg"
import Modulo8 from "../assets/8hori.jpg"
import Modulo9 from "../assets/9hori.jpg"

---

<section class="py-20 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
            <defs>
                <pattern id="modules-pattern" x="0" y="0" width="30" height="30" patternUnits="userSpaceOnUse">
                    <rect x="0" y="0" width="2" height="2" fill="currentColor"/>
                    <rect x="15" y="15" width="2" height="2" fill="currentColor"/>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#modules-pattern)"/>
        </svg>
    </div>

    <!-- Floating Elements -->
    <div class="absolute top-20 right-20 w-32 h-32 bg-gradient-to-br from-blue-200 to-purple-200 rounded-full opacity-20 blur-2xl animate-pulse"></div>
    <div class="absolute bottom-40 left-20 w-24 h-24 bg-gradient-to-br from-green-200 to-blue-200 rounded-full opacity-20 blur-2xl animate-pulse" style="animation-delay: 2s;"></div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">
            
            <!-- Section Header -->
            <div class="text-center mb-16">
                <div class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-600 to-green-600 text-white rounded-full px-6 py-3 mb-6">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    <span class="font-semibold uppercase tracking-wide">Contenido del Curso</span>
                </div>
                
                <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-slate-800 mb-6 leading-tight">
                    Los <span class="bg-gradient-to-r from-blue-600 via-green-600 to-blue-700 bg-clip-text text-transparent">9 Módulos</span>
                    <br>que Transformarán tu Tiroides
                </h2>
                
                <p class="text-xl text-slate-600 max-w-4xl mx-auto leading-relaxed">
                    Un sistema paso a paso diseñado por el <strong class="text-slate-800">Dr. Rawdy Reales</strong> que te llevará 
                    desde el diagnóstico hasta la <strong class="text-green-600">recuperación completa</strong> de tu salud tiroidea.
                </p>
            </div>
            
            <!-- Modules Grid -->
            <div class="grid lg:grid-cols-3 gap-8 mb-16">
                
                <!-- Módulo 1: Fundamentos -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-blue-200 transition-all duration-500 transform hover:-translate-y-2">
                    <!-- Module Image Container -->
                    <div class="relative h-48 bg-gradient-to-br from-blue-100 to-blue-200 overflow-hidden">
                        <Image 
                        src={Modulo1}
                        alt="Módulo 1 - Fundamentos de la Tiroides"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        
                        <!-- Module Number Badge -->
                        <div class="absolute top-4 left-4 w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">01</span>
                        </div>
                        <!-- Duration Badge -->
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">45 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-blue-600 transition-colors">
                            Fundamentos de la Tiroides
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            Comprende cómo funciona tu tiroides, las hormonas que produce y por qué se desequilibra. 
                            La base científica que necesitas conocer.
                        </p>
                        
                        <!-- Key Points -->
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                <span class="text-slate-600">Anatomía y fisiología tiroidea</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                <span class="text-slate-600">Hormonas T3, T4 y TSH explicadas</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                <span class="text-slate-600">Causas del desequilibrio hormonal</span>
                            </div>
                        </div>
                        
                        <!-- Access Button -->
                        <button class="w-full bg-blue-50 hover:bg-blue-100 text-blue-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-blue-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 2: Diagnóstico -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-green-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-green-100 to-green-200 overflow-hidden">
                        <Image 
                        src={Modulo2}
                        alt="Módulo 2 - Diagnóstico Avanzado"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-green-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">02</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">60 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-green-600 transition-colors">
                            Diagnóstico Avanzado
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            Más allá de la TSH: aprende a interpretar todos los análisis y descubre 
                            las pruebas que tu médico debería ordenar.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                <span class="text-slate-600">Interpretación completa de análisis</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                <span class="text-slate-600">Anticuerpos antitiroideos</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                <span class="text-slate-600">Síntomas ocultos a detectar</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-green-50 hover:bg-green-100 text-green-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-green-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 3: Alimentación -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-orange-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-orange-100 to-orange-200 overflow-hidden">
                        <Image 
                        src={Modulo3}
                        alt="Módulo 3 - Alimentación Tiroidea" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-orange-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">03</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">75 min</span>
                        </div>
                        <!-- Featured Badge -->
                        <div class="absolute bottom-4 left-4 bg-orange-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                            MÓDULO CLAVE
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-orange-600 transition-colors">
                            Alimentación en la Tiroides
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            El módulo más importante: qué comer, qué evitar y cómo estructurar 
                            tu alimentación para optimizar tu función tiroidea.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                                <span class="text-slate-600">Alimentos que sanan la tiroides</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                                <span class="text-slate-600">Protocolo anti-inflamatorio</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                                <span class="text-slate-600">Plan de comidas personalizado</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-orange-50 hover:bg-orange-100 text-orange-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-orange-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 4: Suplementación -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-purple-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-purple-100 to-purple-200 overflow-hidden">
                        <Image 
                        src={Modulo4}
                        alt="Módulo 4 - Suplementación Estratégica" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">04</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">55 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-purple-600 transition-colors">
                            Suplementación Estratégica
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            Los nutrientes esenciales que tu tiroides necesita: selenio, zinc, yodo, 
                            vitamina D y más. Dosis, timing y combinaciones efectivas.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                                <span class="text-slate-600">Protocolo de suplementos clave</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                                <span class="text-slate-600">Dosis y horarios óptimos</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                                <span class="text-slate-600">Interacciones a evitar</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-purple-50 hover:bg-purple-100 text-purple-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-purple-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 5: Estrés y Sueño -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-indigo-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-indigo-100 to-indigo-200 overflow-hidden">
                        <Image 
                        src={Modulo5}
                        alt="Módulo 5 - Manejo del Estrés" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-indigo-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">05</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">50 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-indigo-600 transition-colors">
                            Manejo del Estrés y Sueño
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            Cómo el estrés crónico sabotea tu tiroides y estrategias prácticas 
                            para optimizar tu sueño y reducir el cortisol.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-indigo-500 rounded-full"></div>
                                <span class="text-slate-600">Técnicas de reducción de estrés</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-indigo-500 rounded-full"></div>
                                <span class="text-slate-600">Optimización del sueño</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-indigo-500 rounded-full"></div>
                                <span class="text-slate-600">Equilibrio cortisol-tiroides</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-indigo-50 hover:bg-indigo-100 text-indigo-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-indigo-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 6: Ejercicio -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-teal-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-teal-100 to-teal-200 overflow-hidden">
                        <Image 
                        src={Modulo6}
                        alt="Módulo 6 - Ejercicio Tiroideo" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-teal-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">06</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">40 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-teal-600 transition-colors">
                            Ejercicio para la Tiroides
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            El tipo de ejercicio que beneficia (y el que perjudica) a tu tiroides. 
                            Rutinas específicas según tu condición hormonal.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-teal-500 rounded-full"></div>
                                <span class="text-slate-600">Ejercicios recomendados</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-teal-500 rounded-full"></div>
                                <span class="text-slate-600">Intensidad y frecuencia</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-teal-500 rounded-full"></div>
                                <span class="text-slate-600">Ejercicios a evitar</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-teal-50 hover:bg-teal-100 text-teal-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-teal-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 7: Salud Intestinal -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-rose-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-rose-100 to-rose-200 overflow-hidden">
                        <Image 
                        src={Modulo7}
                        alt="Módulo 7 - Eje Intestino-Tiroides" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-rose-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">07</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">65 min</span>
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-rose-600 transition-colors">
                            Eje Intestino-Tiroides
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            La conexión crucial entre tu intestino y tiroides. Cómo sanar tu 
                            microbiota para optimizar la absorción hormonal.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-rose-500 rounded-full"></div>
                                <span class="text-slate-600">Protocolo de sanación intestinal</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-rose-500 rounded-full"></div>
                                <span class="text-slate-600">Probióticos específicos</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-rose-500 rounded-full"></div>
                                <span class="text-slate-600">Permeabilidad intestinal</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-rose-50 hover:bg-rose-100 text-rose-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-rose-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 8: Hormonas y Ciclo -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-pink-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-pink-100 to-pink-200 overflow-hidden">
                        <Image 
                        src={Modulo8}
                        alt="Módulo 8 - Tiroides y Hormonas Femeninas" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-pink-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">08</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">70 min</span>
                        </div>
                        <!-- Special Badge -->
                        <div class="absolute bottom-4 left-4 bg-pink-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                            MUJERES
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-pink-600 transition-colors">
                            Tiroides y Hormonas Femeninas
                        </h3>
                        <p class="text-slate-600 mb-6 leading-relaxed">
                            Cómo la tiroides afecta tu ciclo menstrual, fertilidad y menopausia. 
                            Protocolo específico para mujeres en cada etapa.
                        </p>
                        
                        <div class="space-y-2 mb-6">
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
                                <span class="text-slate-600">Ciclo irregular y tiroides</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
                                <span class="text-slate-600">Fertilidad y embarazo</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
                                <span class="text-slate-600">Menopausia y tiroides</span>
                            </div>
                        </div>
                        
                        <button class="w-full bg-pink-50 hover:bg-pink-100 text-pink-700 font-semibold py-3 rounded-xl transition-colors group-hover:bg-pink-600 group-hover:text-white">
                            Ver Contenido Completo
                        </button>
                    </div>
                </div>
                
                <!-- Módulo 9: Plan de Acción -->
                <div class="group bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl border-2 border-slate-100 hover:border-emerald-200 transition-all duration-500 transform hover:-translate-y-2">
                    <div class="relative h-48 bg-gradient-to-br from-emerald-100 to-emerald-200 overflow-hidden">
                        <Image 
                        src={Modulo9}
                        alt="Módulo 9 - Plan de Acción Total" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                        <div class="absolute top-4 left-4 w-12 h-12 bg-emerald-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-black text-lg">09</span>
                        </div>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1">
                            <span class="text-xs font-semibold text-slate-700">90 min</span>
                        </div>
                        <!-- Final Badge -->
                        <div class="absolute bottom-4 left-4 bg-emerald-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                            PLAN FINAL
                        </div>
                    </div>
                    
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-emerald-600 transition-colors">
