<script is:inline>
    // FAQ Accordion functionality
    document.addEventListener('DOMContentLoaded', function() {
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            const button = item.querySelector('.faq-button');
            const content = item.querySelector('.faq-content');
            const icon = item.querySelector('.faq-icon svg');
            
            button.addEventListener('click', function() {
                const isOpen = !content.classList.contains('hidden');
                
                // Close all other FAQ items
                faqItems.forEach(otherItem => {
                    const otherContent = otherItem.querySelector('.faq-content');
                    const otherIcon = otherItem.querySelector('.faq-icon svg');
                    if (otherItem !== item) {
                        otherContent.classList.add('hidden');
                        otherIcon.style.transform = 'rotate(0deg)';
                        otherItem.classList.remove('border-blue-300', 'border-green-300');
                    }
                });
                
                // Toggle current item
                if (isOpen) {
                    content.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                    item.classList.remove('border-blue-300', 'border-green-300');
                } else {
                    content.classList.remove('hidden');
                    icon.style.transform = 'rotate(180deg)';
                    // Alternate border colors
                    if (icon.classList.contains('text-blue-600')) {
                        item.classList.add('border-blue-300');
                    } else {
                        item.classList.add('border-green-300');
                    }
                }
            });
        });
    });
</script>